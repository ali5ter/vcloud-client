<xs:schema xmlns="http://www.vmware.com/vcloud/v1" xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" targetNamespace="http://www.vmware.com/vcloud/v1" version="1.0">

    <xs:include schemaLocation="common.xsd"/>
    <xs:annotation>
        <xs:documentation xml:lang="en">
            Schema for the vCloud task object.
        </xs:documentation>
    </xs:annotation>

    <xs:element name="Task" type="TaskType"/>
    <xs:complexType name="TaskType">
        <xs:annotation>
            <xs:documentation source="since">0.9</xs:documentation>
            <xs:documentation xml:lang="en">
                Represents an asynchronous or long-running task in the vCloud environment.
            </xs:documentation>
        </xs:annotation>

        <xs:complexContent>
            <xs:extension base="ResourceType">
                <xs:sequence>
                    <xs:element name="Owner" type="ReferenceType" minOccurs="0">
                        <xs:annotation>
                            <xs:documentation source="modifiable">none</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Reference to an owner of the task.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="Error" type="ErrorType" minOccurs="0">
                        <xs:annotation>
                            <xs:documentation source="modifiable">none</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Represents an error information if the task failed.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                </xs:sequence>
                <xs:attribute name="status" type="TaskStatusType" use="required">
                    <xs:annotation>
                        <xs:documentation source="modifiable">none</xs:documentation>
                        <xs:documentation xml:lang="en">
                            The execution status of the task.
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="operation" type="xs:string" use="optional">
                    <xs:annotation>
                        <xs:documentation source="modifiable">none</xs:documentation>
                        <xs:documentation xml:lang="en">
                            The name of the operation that is tracked by this task.
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="startTime" type="xs:dateTime" use="optional">
                    <xs:annotation>
                        <xs:documentation source="modifiable">none</xs:documentation>
                        <xs:documentation xml:lang="en">
                            The date and time the system started executing the task. May
                            not be present if the task hasn't been executed yet.
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="endTime" type="xs:dateTime" use="optional">
                    <xs:annotation>
                        <xs:documentation source="modifiable">none</xs:documentation>
                        <xs:documentation xml:lang="en">
                            The date and time that processing of the task was completed.
                            May not be present if the task is still being executed.
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="expiryTime" type="xs:dateTime" use="optional">
                    <xs:annotation>
                        <xs:documentation source="modifiable">none</xs:documentation>
                        <xs:documentation xml:lang="en">
                            The date and time at which the task resource will be destroyed
                            and no longer available for retrieval. May not be present if
                            the task has not been executed or is still being executed.
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:simpleType name="TaskStatusType">
        <xs:annotation>
            <xs:documentation source="since">0.9</xs:documentation>
            <xs:documentation xml:lang="en">
                The possible states for a task.
            </xs:documentation>
        </xs:annotation>

        <xs:restriction base="xs:string">
            <xs:enumeration value="queued">
                <xs:annotation>
                    <xs:documentation xml:lang="en">
                        Queued indicates no processing has taken place yet.
                    </xs:documentation>
                </xs:annotation>
            </xs:enumeration>
            <xs:enumeration value="running">
                <xs:annotation>
                    <xs:documentation xml:lang="en">
                        Running indicates that the system is currently processing the task.
                    </xs:documentation>
                </xs:annotation>
            </xs:enumeration>
            <xs:enumeration value="success">
                <xs:annotation>
                    <xs:documentation xml:lang="en">
                        Success indicates the task completed as intended with the desired result.
                    </xs:documentation>
                </xs:annotation>
            </xs:enumeration>
            <xs:enumeration value="error">
                <xs:annotation>
                    <xs:documentation xml:lang="en">
                        Error indicates a problem occurred while processing the task,
                        either due to a system fault or due to the task being in conflict
                        with the state of the affected resources.
                    </xs:documentation>
                </xs:annotation>
            </xs:enumeration>
            <xs:enumeration value="canceled">
                <xs:annotation>
                    <xs:documentation xml:lang="en">
                        Canceled indicates that the task was stopped from executing before
                        it began or was completed and no further processing will take place.
                    </xs:documentation>
                </xs:annotation>
            </xs:enumeration>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>
