<xs:schema  xmlns="http://www.vmware.com/vcloud/extension/v1.5" xmlns:vcloud="http://www.vmware.com/vcloud/v1.5" xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" targetNamespace="http://www.vmware.com/vcloud/extension/v1.5" version="1.0">

    <xs:import schemaLocation="../vcloud/common.xsd" namespace="http://www.vmware.com/vcloud/v1.5"/>
    <xs:import schemaLocation="../vcloud/task.xsd" namespace="http://www.vmware.com/vcloud/v1.5"/>
    <xs:import schemaLocation="../vcloud/network.xsd" namespace="http://www.vmware.com/vcloud/v1.5"/>

    <xs:element name="SystemSettings" type="SystemSettingsType"/>
    <xs:complexType name="SystemSettingsType">
        <xs:annotation>
             <xs:documentation xml:lang="en">
                 Represents the settings of the system.
             </xs:documentation>
             <xs:documentation source="since">1.5</xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="vcloud:ResourceType">
                <xs:sequence>
                    <xs:element name="GeneralSettings" type="GeneralSettingsType" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation>
                                 The general settings.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>

                    <xs:element name="NotificationsSettings" type="NotificationsSettingsType" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation>
                                 Notifications settings.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>

                    <xs:element name="LdapSettings" type="LdapSettingsType" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation>
                                 LDAP settings.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>

                    <xs:element name="AmqpSettings" type="AmqpSettingsType" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation>
                                 AMQP settings.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>

                    <xs:element name="EmailSettings" type="EmailSettingsType" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation>
                                 Represent all the email related settings in the system.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>

                    <xs:element name="License" type="LicenseType" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation>
                                 This is used by the API to update and retrieve site license specific information.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>

                    <xs:element name="BrandingSettings" type="BrandingSettingsType" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation>
                                BrandingSettings stores all information about how to brand the product for
                                vCloud service, like provider name, logo etc.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>

                    <xs:element name="BlockingTaskSettings" type="BlockingTaskSettingsType" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation>
                                 Blocking task settings.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>

                    <xs:element name="PasswordPolicySettings" type="SystemPasswordPolicySettingsType" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation>
                                 Password policy settings for the cloud provider administrator. These are also inherited by
                                 organizations, unless overridden at the organization level.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
       </xs:complexContent>
    </xs:complexType>

    <xs:element name="GeneralSettings" type="GeneralSettingsType"/>
    <xs:complexType name="GeneralSettingsType">
        <xs:annotation>
             <xs:documentation xml:lang="en">
                 Represents the general part of the system settings.
             </xs:documentation>
             <xs:documentation source="since">1.5</xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="vcloud:ResourceType">
                <xs:sequence>
                <xs:element name="AbsoluteSessionTimeoutMinutes" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Absolute number of minutes to timeout client session.
                                This will trigger session timeout even when there are user activities.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="ActivityLogDisplayDays" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Days of activities to be displayed to the users.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="ActivityLogKeepDays" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Days of activities to keep in the system.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="AllowOverlappingExtNets" type="xs:boolean" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Boolean flag that allows/disallows creation of multiple external networks on the same LAN segment.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="ChargebackEventsKeepDays" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Days for which events are to be kept in Chargeback Tables.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="ChargebackTablesCleanupJobTimeInSeconds" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Time of the day at which the job should run.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="ConsoleProxyExternalAddress" type="xs:string" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Load balancer address configured for Console Proxy.
                                Leave empty to clear the address.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="HostCheckDelayInSeconds" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Frequency of checking the host status
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="HostCheckTimeoutSeconds" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Number of seconds to wait for a response from a host before marking it as hung.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="InstallationId" type="xs:int" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">none</xs:documentation>
                            <xs:documentation xml:lang="en">
                                The installation Id. The acceptable value is between 0 and 63.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="IpReservationTimeoutSeconds" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Number of seconds to keep released IP addresses on hold before making them available for allocation again. This is typically set to 2 hours to allow old entries to expire from client ARP tables.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="SyslogServerSettings" type="vcloud:SyslogServerSettingsType" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Default syslog server settings for networks.
                                If logging is configured for firewall rules, the logs will be directed to these syslog servers.
                                If you change these values, you must
                                synchronize the syslog server settings for each
                                network in the system by running its
                                syncSyslogServerSettings action.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="LoginNameOnly" type="xs:boolean" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                System login policy setting (automatic login or remember user name only).
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="PrePopDefaultName" type="xs:boolean" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Pre-populate default configuration and virtual machine name.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="QuarantineEnabled" type="xs:boolean" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Flag to indicate whether uploads should be quarantined.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="QuarantineResponseTimeoutSeconds" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                The length of time, in seconds, before a quarantined transfer is 'timedout'.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="RestApiBaseUri" type="xs:string" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Load balancer address configured for the REST API.
                                Leave empty to clear the address.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="SessionTimeoutMinutes" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Number of minutes to timeout client session.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="ShowStackTraces" type="xs:boolean" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Boolean flag to turn on/off the display of exception stack traces.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="SyncStartDate" type="xs:dateTime" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Number of minutes to timeout client session.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="SyncIntervalInHours" type="xs:long" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                LDAP sync repeats interval time in hours.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="SystemExternalAddress" type="xs:string" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                The systemExternalAddress is the external web link address to system.
                                Leave empty to clear the address.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="TransferSessionTimeoutSeconds" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Transfer sessions time out in this number of seconds.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="VerifyVcCertificates" type="xs:boolean" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Boolean flag to apply a strict trust check to vCenter certificates.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="VcTruststorePassword" type="xs:string" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Password for the vCenter truststore, if used. If empty or no password is passed then no update is performed.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="VcTruststoreContents" type="xs:hexBinary" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                vCenter truststore bytes (if used).
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="VcTruststoreType" type="xs:string" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                vCenter truststore type (JKS, JCEKS, PKCS12).
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="VmrcVersion" type="xs:string" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">none</xs:documentation>
                            <xs:documentation xml:lang="en">
                                VMRC version.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="VerifyVsmCertificates" type="xs:boolean" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Boolean flag to apply a strict trust check to vShield Manager certificates.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:element name="AmqpSettings" type="AmqpSettingsType"/>
    <xs:complexType name="AmqpSettingsType">
        <xs:annotation>
             <xs:documentation xml:lang="en">
                 Represents the settings for the AMQP broker.
             </xs:documentation>
             <xs:documentation source="since">1.5</xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="vcloud:ResourceType">
                <xs:sequence>
                    <xs:element name="AmqpHost" type="xs:string" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Hostname of the AMQP broker.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="AmqpPort" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Port of the AMQP broker.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="AmqpUsername" type="xs:string" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Username for the AMQP broker.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="AmqpPassword" type="xs:string" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Password for the AMQP broker.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="AmqpExchange" type="xs:string" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                AMQP exchange for publishing.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="AmqpVHost" type="xs:string" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Virtual host for the AMQP broker.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="AmqpUseSSL" type="xs:boolean" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Use SSL for communication with the AMQP broker.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:element name="AmqpSettingsTest" type="AmqpSettingsTestType"/>
    <xs:complexType name="AmqpSettingsTestType">
        <xs:annotation>
             <xs:documentation source="since">1.5</xs:documentation>
             <xs:documentation xml:lang="en">
                 Represents the result from AMQP settings test.
             </xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="vcloud:ResourceType">
                <xs:sequence>
                    <xs:element name="Valid" type="xs:boolean" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation xml:lang="en">
                                Result from AMQP settings test. True, if settings are valid.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:element name="NotificationsSettings" type="NotificationsSettingsType"/>
    <xs:complexType name="NotificationsSettingsType">
        <xs:annotation>
             <xs:documentation xml:lang="en">
                 Represents the settings related to Notifications.
             </xs:documentation>
             <xs:documentation source="since">1.5</xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="vcloud:ResourceType">
                <xs:sequence>
                    <xs:element name="EnableNotifications" type="xs:boolean" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Boolean flag to turn on/off notification messages.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:element name="BlockingTaskSettings" type="BlockingTaskSettingsType"/>
    <xs:complexType name="BlockingTaskSettingsType">
        <xs:annotation>
             <xs:documentation xml:lang="en">
                 Represents the settings related to blocking tasks.
             </xs:documentation>
             <xs:documentation source="since">1.5</xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="vcloud:ResourceType">
                <xs:sequence>
                    <xs:element name="TimeoutAction" type="xs:string" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Action to be taken by the automatic timeout policy processing when it
                                gets triggered due to timeout. One of:
                                resume (The task will be resumed.),
                                abort (The task will be aborted. Transient
                                objects are cleaned up. Task status is set to
                                ABORTED.),
                                fail (The task will be failed. Transient object
                                status and task status are set to ERROR.)
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>

                    <xs:element name="BlockingTaskOperations" type="vcloud:TaskOperationListType" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Task operations which are enabled for blocking.
                                If this element is empty or not supplied no operations will block.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>

                    <xs:element name="TimeoutInMilliseconds" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Value in milliseconds that defines how long to wait for a blocking
                                task to be processed before triggering automatic timeout policy.
                            </xs:documentation>
                        </xs:annotation>
                        <xs:simpleType>
                            <xs:restriction base="xs:long">
                                <xs:minInclusive value="0"></xs:minInclusive>
                            </xs:restriction>
                        </xs:simpleType>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:element name="BlockingTaskOperations" type="vcloud:TaskOperationListType"/>

    <xs:element name="SystemPasswordPolicySettings" type="SystemPasswordPolicySettingsType"/>
    <xs:complexType name="SystemPasswordPolicySettingsType">
        <xs:annotation>
             <xs:documentation xml:lang="en">
                 Represents the settings related to Password Policy.
             </xs:documentation>
             <xs:documentation source="since">1.5</xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="vcloud:ResourceType">
                <xs:sequence>
                    <xs:element name="AccountLockoutEnabled" type="xs:boolean" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Boolean flag to turn on/off the account lockout feature.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="AdminAccountLockoutEnabled" type="xs:boolean" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Boolean flag to indicate whether system administrator accounts can lockout.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="InvalidLoginsBeforeLockout" type="xs:int" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Number of invalid login attempts that will trigger account lockout.
                            </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="AccountLockoutIntervalMinutes" minOccurs="1" maxOccurs="1">
                        <xs:annotation>
                            <xs:documentation source="modifiable">always</xs:documentation>
                            <xs:documentation xml:lang="en">
                                Number of minutes an account that is locked out will remain locked.
                            </xs:documentation>
                        </xs:annotation>
                        <xs:simpleType>
                            <xs:restriction base="xs:int">
                                <xs:minInclusive value="1"></xs:minInclusive>
                            </xs:restriction>
                        </xs:simpleType>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:element name="LdapSettings" type="LdapSettingsType"/>
    <xs:complexType name="LdapSettingsType">
        <xs:annotation>
            <xs:documentation source="since">1.5</xs:documentation>
            <xs:documentation xml:lang="en">
                Defines the hostname and connection details for system
                LDAP service.
            </xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="vcloud:ResourceType">
                <xs:sequence>
                    <xs:element name="HostName" type="xs:string" minOccurs="0" maxOccurs="1">
                        <xs:annotation>
